<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp">

    <!-- Trzy kropki -->
    <ImageView
        android:id="@+id/ivEditTask"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/more_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="36dp" /> <!-- dopasowane do Today’s TO-DO -->

    <!-- Checkbox / paw -->
    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/custom_checkbox_shape"
        app:layout_constraintStart_toEndOf="@id/ivEditTask"
        app:layout_constraintTop_toTopOf="@id/ivEditTask"
        app:layout_constraintBottom_toBottomOf="@id/ivEditTask"
        android:layout_marginStart="12dp" />

    <!-- Tytuł taska -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/inter"
        app:layout_constraintStart_toEndOf="@id/checkbox"
        app:layout_constraintTop_toTopOf="@id/checkbox"
        app:layout_constraintBottom_toBottomOf="@id/checkbox"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"
        android:ellipsize="end"
        android:singleLine="true" />

</androidx.constraintlayout.widget.ConstraintLayout>







